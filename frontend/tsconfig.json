{
    "include": [
        "src/ts/**/*.ts",
        "src/ts/**/*.tsx",
        "src/ts/**/*.vue",
        "src/@types",
    ],
    "exclude": [
        "node_modules",
    ],
    "compilerOptions": {
        "outDir": "",
        "incremental": true,
        "target": "es5",
        "module": "es2015",
        "sourceMap": true,
        "removeComments": false,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es2015",
            "dom",
            "dom.iterable",
        ],
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "allowJs": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "noUnusedLocals": false,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "types": [],
    },
}
